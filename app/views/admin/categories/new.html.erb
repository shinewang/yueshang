创建分类

<%= error_messages_for :category %>
<% form_for :category, :url => admin_create_category_path do |f| -%>
    <fieldset>
      <% if (@parent_category != nil) %>
        <div><label for="parent_category">父分类: <%= @parent_category.name %></label></div>
      <% end %>
      <div><label for="name">名称</label>
      <%= f.text_field :name, :size => 30, :maxlength => 30, :class => 'text' %></div>
      <div class="submitButton"><%= submit_tag '创建' %></div>
    </fieldset>
<% end -%>

<%= link_to 'Back', admin_list_category_path %>
