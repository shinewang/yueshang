<div id="sidebar">

</div>
<div id="content">
  <h2>用户注册</h2>
  <%= error_messages_for :account %>
  <% form_for :account, :url => new_account_path do |f| -%>
    <fieldset>
      <div><label for="login">用户名</label>
      <%= f.text_field :login, :size => 30, :maxlength => 30, :class => 'text' %></div>

      <div><label for="email">电子邮箱</label>
      <%= f.text_field :email, :size => 30, :maxlength => 60, :class => 'text' %></div>

      <div><label for="password">注册密码</label>
      <%= f.password_field :password, :size => 30, :maxlength=> 20, :class => 'text' %></div>

      <div><label for="password_confirmation">再次输入密码</label>
      <%= f.password_field :password_confirmation, :size => 30, :maxlength=> 20, :class => 'text' %></div>

      <div class="submitButton"><%= submit_tag '同意用户协议并注册' %></div>
    </fieldset>
  
  <% end -%>
  <div class="clear"></div>
</div>

